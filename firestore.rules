rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Vehicles subcollection - only accessible by the user who owns it
      match /vehicles/{vehicleId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Fuel logs subcollection - only accessible by the user who owns it
      match /fuelLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Maintenance logs subcollection - only accessible by the user who owns it
      match /maintenanceLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
