rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User settings subcollection
      match /settings/{settingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Vehicles subcollection - only accessible by the user who owns it
      match /vehicles/{vehicleId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Fuel logs subcollection - nested under vehicle
        match /fuelLogs/{logId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Activities subcollection - unified storage for fuel + service logs
        match /activities/{activityId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Maintenance logs subcollection - nested under vehicle
        match /maintenanceLogs/{logId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
  }
}
